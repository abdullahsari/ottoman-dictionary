{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "project": {
        "name": "ottoman-dictionary"
    },
    "apps": [
        {
            "name": "Ottoman Dictionary",
            "root": "src",
            "outDir": "dist",
            "assets": ["assets/audio/", "assets/img/", "manifest.json"],
            "index": "index.html",
            "main": "main.ts",
            "polyfills": "polyfills.ts",
            "tsconfig": "tsconfig.app.json",
            "prefix": "app",
            "styles": ["styles/main.scss"],
            "scripts": [],
            "environmentSource": "environments/environment.ts",
            "environments": {
                "dev": "environments/environment.ts",
                "prod": "environments/environment.prod.ts"
            },
            "serviceWorker": true,
            "stylePreprocessorOptions": {
                "includePaths": ["styles/abstracts"]
            }
        }
    ],
    "lint": [
        {
            "project": "src/tsconfig.app.json",
            "exclude": "**/node_modules/**"
        }
    ],
    "defaults": {
        "styleExt": "scss",
        "class": {
            "spec": false
        },
        "component": {
            "changeDetection": "OnPush",
            "spec": false
        },
        "directive": {
            "spec": false
        },
        "guard": {
            "spec": false
        },
        "module": {
            "spec": false
        },
        "pipe": {
            "spec": false
        },
        "service": {
            "spec": false
        }
    },
    "packageManager": "yarn"
}
